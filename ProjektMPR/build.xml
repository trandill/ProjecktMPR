<?xml version="1.0" encoding="UTF-8"?>
<project name= "ProjektMPR">

	<target name ="compile">
		<mkdir dir="bin" />
		<javac srcdir="src" destdir="bin" />
	</target>

	<target name="jar">
		<mkdir dir ="bin/jar"/>
		<jar destfile="${jar}/ProjektMPR.jar" basedir="bin" >
			<manifest>
				<attribute name="Main-Class" value="Wypozyczalnia_samochodow.Glowny" />
			</manifest>
		</jar>
	</target>

	<target name ="run-jar">
		<java jar="${jar}/ProjektMPR.jar" fork="true" />
	</target>
</project>